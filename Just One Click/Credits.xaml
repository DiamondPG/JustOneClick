<Window x:Class="Just_One_Click.Credits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Just_One_Click"
        mc:Ignorable="d"
        Title="Credits" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#28282b"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Designed and Coded by DiamondPG" Grid.Row="0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Right">
        <Hyperlink Name="DiscordIMG" TextDecorations="None" 
            NavigateUri="https://discord.gg/EPTFAH7b6E" 
            ToolTip="Link to Discord">
            <Image x:Name="DiscordIcon" Grid.Row="1" Margin="5" HorizontalAlignment="Right" Source="images/discord.png"/>
        </Hyperlink>
        </TextBlock>
        <Button Content="Close" Click="Close_Click" Grid.Row="1" Margin="5" Width="200"/>
    </Grid>
</Window>
